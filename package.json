{
  "name": "aws-practice-terraform",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy-deps",
    "build:frontend": "npm run build:frontend:clean && npm run build:frontend:compile",
    "build:frontend:clean": "rm -rf frontend/dist",
    "build:frontend:compile": "mkdir -p frontend/dist && cp -r frontend/src/* frontend/dist/",
    "clean": "rm -rf dist",
    "compile": "tsc",
    "copy-deps": "cp package.json dist/ && cd dist && npm install --production --silent",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "deploy": "yarn compile && terraform apply -auto-approve",
    "deploy:frontend": "npm run build:frontend && aws s3 sync frontend/dist/ s3://$(terraform output -raw s3_bucket_name) --delete",
    "destroy": "terraform destroy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.835.0",
    "@aws-sdk/lib-dynamodb": "^3.835.0",
    "@types/aws-lambda": "^8.10.134"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "3.6.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "author": ""
}
